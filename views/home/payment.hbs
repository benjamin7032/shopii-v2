<div class="row" style="margin-top: 20px">
  <div class="col-md-8 mb-4">
    <div class="card mb-4">
      <div class="card-header py-3">
        <h5 class="mb-0">Payment</h5>
      </div>
      <div class="card-body">

        <div class="row mb-4">
        <div class="col">
            <div class="form-outline">
            <input type="text" id="form7Example1" class="form-control" placeholder="First name"/>
            </div>
        </div>
        <div class="col">
            <div class="form-outline">
            <input type="text" id="form7Example2" class="form-control" placeholder="Last name"/>
            </div>
        </div>
        </div>

        <div class="form-outline mb-4">
        <input type="text" id="form7Example4" class="form-control" placeholder="Address"/>
        </div>

        <div class="form-outline mb-4">
        <input type="email" id="form7Example5" class="form-control" placeholder="Email"/>
        </div>

        <div class="form-outline mb-4">
        <input type="text" id="form7Example6" class="form-control" placeholder="Phone"/>
        </div>

      </div>
    </div>
  </div>

  <div class="col-md-4 mb-4">
    <div class="card mb-4">
      <div class="card-header py-3">
        <h5 class="mb-0">Summary</h5>
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
            Products
            <span>{{total}}</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center px-0">
            Shipping
            <span>20000</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
            <div>
              <strong>Total amount</strong>
            </div>
            <span><strong>{{sum total 20000}}</strong></span>
          </li>
        </ul>

        <form method="post" action="/payment">
            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Make purchase">
        </form>
      </div>
    </div>
  </div>
</div>