<h4 class="text-center mt-4 mb-5"><strong>Product Detail</strong></h4>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <img src="{{product.imagePath}}" class="img-fluid">
    </div>
    <div class="col-md-6">
      <h1 class="product-name">{{product.name}}</h1>
      <p class="product-description">{{product.description}}</p>
      <h2 class="product-price">{{product.price}}</h2>
      <a href="/cart/{{product._id}}" class="btn btn-primary">Add to Cart</a>
    </div>
  </div>
</div>