<section class="h-100" style="background-color: #eee;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h1 class="fw-normal mb-0 text-black">Shopping Cart</h1>
        </div>

        {{#if message}}
        <div class="col-md-12 text-center">
          <h1 class="display-4">Cart empty</h1>
        </div>
        {{/if}}

        {{#each carts}}
        <div class="card rounded-3 mb-4">
          <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="col-md-2 col-lg-2 col-xl-2">
                <img src="{{this.imagePath}}" class="img-fluid rounded-3" alt="">
              </div>
              <div class="col-md-3 col-lg-3 col-xl-3">
                <p class="lead fw-normal mb-2">{{this.name}}</p>
              </div>
              <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                <p class="lead fw-normal mb-2">x {{this.quantity}}</p>
              </div>
              <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                <h5 class="mb-0">{{this.price}}</h5>
              </div>
              <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                <a href="#!" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
              </div>
            </div>
          </div>
        </div>
        {{/each}}

        {{#if total}}
        <div class="card mb-4">
          <div class="card-body p-4 d-flex flex-row">
            <div class="form-outline flex-fill">
                <h3 class="fw-normal mb-0 text-black">Total: {{total}}</h3>
            </div>
          </div>
        </div>
        <div class="card mb-4">
            <a class="btn btn-primary btn-lg btn-block" href="/payment" role="button">Payment page</a>   
        </div>   
        {{/if}}

      </div>
    </div>
  </div>
</section>