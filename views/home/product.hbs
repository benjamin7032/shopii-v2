<h1 class="text-center mt-4 mb-5"><strong>Products</strong></h1>

<div class="mt-4">
    <div class="row">
        {{#each products}}
        <div class="col-sm-6 col-lg-3" style="margin-top:16px">
            <div class="card" style="width: 18rem;">
                <a href="/product/{{this._id}}">
                    <img class="card-img-top" width="150px" height="350px" src="{{this.imagePath}}" alt="">
                </a>    
                <div class="card-body">
                    <a href="/product/{{this._id}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a> 
                    <p class="card-text">{{this.price}}</p>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>